# ==============================================================================
# Web UI 模板环境变量配置文件
# ==============================================================================
# 使用说明:
# 1. 复制此文件为 .env: cp .env.example .env
# 2. 根据实际需求修改配置值
# 3. .env 文件已在 .gitignore 中，不会被提交到版本控制
# ==============================================================================

# ==============================================================================
# 应用启动配置 (*main.py)
# ==============================================================================

# 应用标题
APP_TITLE=NeoUI多层布局模板

# 监听端口
APP_PORT=8080

# 启动时是否自动打开浏览器 (true/false)
APP_SHOW=true

# 是否启用热重载 (true/false)
APP_RELOAD=true

# favicon路径 (留空使用默认 🚀 emoji)
APP_FAVICON=

# 是否启用暗黑模式 (true/false)
APP_DARK=false

# 是否使用Vue和Quasar依赖的生产版本（默认：True）
APP_PROD_JS = false

# 存储密钥 (用于加密session，建议使用随机字符串)
# 留空则每次启动自动生成（会导致重启后用户需重新登录）
APP_STORAGE_SECRET=

# ==============================================================================
# 认证系统配置 (auth/config.py)
# ==============================================================================

# ---------- 数据库配置 ----------
# 数据库类型: sqlite, mysql, postgresql
AUTH_DATABASE_TYPE=sqlite

# SQLite 数据库路径（相对于项目根目录）
AUTH_SQLITE_PATH=data/neoapp.db

# MySQL 连接配置（仅当 AUTH_DATABASE_TYPE=mysql 时使用）
AUTH_MYSQL_HOST=localhost
AUTH_MYSQL_PORT=3306
AUTH_MYSQL_USER=root
AUTH_MYSQL_PASSWORD=
AUTH_MYSQL_DATABASE=neoapp

# PostgreSQL 连接配置（仅当 AUTH_DATABASE_TYPE=postgresql 时使用）
AUTH_POSTGRES_HOST=localhost
AUTH_POSTGRES_PORT=5432
AUTH_POSTGRES_USER=postgres
AUTH_POSTGRES_PASSWORD=
AUTH_POSTGRES_DATABASE=neoapp

# ---------- 会话配置 ----------
# Session密钥（用于加密会话，建议使用随机字符串）
AUTH_SESSION_SECRET_KEY=fiB-RO_Y1oaZxpKjxStEfKKYxWRPGTEyD_pQDAdRA9k

# 会话超时时间（秒，默认24小时）
AUTH_SESSION_TIMEOUT=86400

# "记住我"功能持续时间（秒，默认30天）
AUTH_REMEMBER_ME_DURATION=2592000

# ---------- 密码策略配置 ----------
# 密码最小长度
AUTH_PASSWORD_MIN_LENGTH=6

# 密码最大长度
AUTH_PASSWORD_MAX_LENGTH=128

# 是否要求密码包含大写字母 (true/false)
AUTH_PASSWORD_REQUIRE_UPPERCASE=false

# 是否要求密码包含小写字母 (true/false)
AUTH_PASSWORD_REQUIRE_LOWERCASE=false

# 是否要求密码包含数字 (true/false)
AUTH_PASSWORD_REQUIRE_DIGIT=false

# 是否要求密码包含特殊字符 (true/false)
AUTH_PASSWORD_REQUIRE_SPECIAL=false

# ---------- 登录安全配置 ----------
# 最大登录失败次数（超过后锁定账户）
AUTH_MAX_LOGIN_ATTEMPTS=5

# 账户锁定持续时间（分钟）
AUTH_LOGIN_LOCK_DURATION=30

# 是否启用验证码 (true/false)
AUTH_ENABLE_CAPTCHA=false

# ---------- 功能开关 ----------
# 是否允许用户注册 (true/false)
AUTH_ALLOW_REGISTRATION=true

# 是否允许"记住我"功能 (true/false)
AUTH_ALLOW_REMEMBER_ME=true

# 是否启用邮箱验证 (true/false)
AUTH_ENABLE_EMAIL_VERIFICATION=false

# 是否启用双因素认证 (true/false)
AUTH_ENABLE_TWO_FACTOR=false

# ---------- 路由配置 ----------
# 登录页面路由
AUTH_LOGIN_ROUTE=/login

# 注册页面路由
AUTH_REGISTER_ROUTE=/register

# 登出页面路由
AUTH_LOGOUT_ROUTE=/logout

# 登录后默认跳转路由
AUTH_DEFAULT_REDIRECT=/workbench

# ==============================================================================
# 其他模块配置示例
# ==============================================================================

# ---------- 日志配置 (common/log_handler.py) ----------
# LOG_LEVEL=INFO
# LOG_FILE_PATH=logs/app.log
# LOG_MAX_SIZE=10485760
# LOG_BACKUP_COUNT=5

# ==============================================================================
# 开发/生产环境标识
# ==============================================================================
# 环境模式: development, production, testing
ENVIRONMENT=development

# 是否启用调试模式 (true/false)
DEBUG=true